{
  "manifest_version": 3,
  "name": "Distraction Blocker",
  "version": "1.0.0",
  "description": "A simple Chrome extension to block distracting websites.",
  "action": {
    "default_popup": "index.html",
    "default_title": "Distraction Blocker"
  },
  "permissions": [
    "storage",
    "tabs",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*",
        "*://*.instagram.com/*"
      ],
      "js": [
        "src/content/index.tsx"
      ],
      "run_at": "document_start"
    }
  ]
}